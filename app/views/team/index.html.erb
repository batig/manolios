<h1 class="page-header">Your Teams</h1>

<table class="table">
  <thead>
    <tr>
      <th>Team</th>
      <th>Team Balance</th>
      <th>Your Balance</th>
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= link_to team.name, team_path(id: team.id) %></td>
        <td><%= team.balance %></td>
        <td><%= current_user_balance(team) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pull-right clearfix">
  <%= link_to "New Team", new_team_path, class: "btn btn-default" %>
</div>
